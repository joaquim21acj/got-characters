{% extends 'base.html.twig' %}

{% block title %}Character{% endblock %}

{% block body %}
    <h1>Character</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ character.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ character.name }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ character.link }}</td>
            </tr>
            <tr>
                <th>ImageThumb</th>
                <td>{{ character.imageThumb }}</td>
            </tr>
            <tr>
                <th>ImageFull</th>
                <td>{{ character.imageFull }}</td>
            </tr>
            <tr>
                <th>Royal</th>
                <td>{{ character.royal ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_character_index') }}">back to list</a>

    <a href="{{ path('app_character_edit', {'id': character.id}) }}">edit</a>

    {{ include('character/_delete_form.html.twig') }}
{% endblock %}
